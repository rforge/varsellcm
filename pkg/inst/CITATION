citHeader("To cite package 'VarSelLCM' in publications use:")
     
desc <- packageDescription("VarSelLCM")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)

citEntry(entry="article",
         title = "VarSelLCM: Variable Selection for a cluster analysis using the Latent Class Model",
         author = personList(person(given="Matthieu", family="Marbac"),
                             person(given="Mohammed", family="Sedki")),
         journal = "Preprint", 
          year="2015",
         volume = " ",
         pages = " ",
         paste("Matthieu Marbac and Mohammed Sedki (2015)",
"Variable selection for model-based clustering using the integrated complete-data likelihood",
"Preprint"))


